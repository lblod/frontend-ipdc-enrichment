<div class="au-c-main-container" itemprop="mainContentOfPage">
  <div class="au-c-main-container__content au-c-main-container__content--scroll">
    <main id="content">
      <AuContentHeader @titlePartOne="IPDC Enrichment" @titlePartTwo="Agentschap Binnenlands Bestuur">
        <img sizes="50vw" src="/assets/images/header-1600.jpg"
          srcset="/assets/images/header-320.jpg 320w, /assets/images/header-1024.jpg 1024w, /assets/images/header-1600.jpg 1600w"
          alt="Foto van een laptop met daarop het vlaanderen logo." />
      </AuContentHeader>

      <section class="au-o-region-large">
        <div class="au-o-layout">
          <div class="au-o-grid au-o-grid--small">
            <div class="au-o-grid__item au-u-3-4@small au-u-1-2@medium">
              <AuContent @skin="large">
                <h1>IPDC Enrichment</h1>
                <h2>Welkom bij IPDC Enrichment voor het digitaal loket.</h2>

                <h2>Problemen met aanmelden?</h2>
                <ul>
                  <li>Contacteer <a href="mailto:LoketLokaalBestuur@vlaanderen.be"
                      class="au-c-link">LoketLokaalBestuur@vlaanderen.be</a></li>
                  <li>Bij verdere problemen kan je terecht bij de helpdesk van <AuLinkExternal
                      href="https://www.vlaanderen.be/aanmelden/help/mail.html?Authenticatiemiddel=token&Bronpagina=aanmelden&Doelgroep=organisatie%20vzw&Applicatie=Test">
                      Gebruikersbeheer Vlaanderen</AuLinkExternal>.</li>
                </ul>
              </AuContent>
            </div>
            <div class="au-o-grid__item au-u-1-4@small au-u-1-2@medium au-u-text-right@medium">
              <LoginButton />
            </div>
          </div>
        </div>
      </section>
      <section class="au-o-region-large au-u-background-gray-200">
        <div class="au-o-layout">
          <AuContent @skin="large" class="au-u-margin-bottom">
            <AuHeading @level="2" @skin="3" class="au-u-margin-bottom">De
              functionaliteiten van IPDC Enrichment</AuHeading>
          </AuContent>
          <div class="au-o-grid au-o-grid--small">
            <div class="au-o-grid__item au-u-1-2@small">
              <AuCard @textCenter="true" as |c|>
                <c.header @badgeSkin="brand" @badgeIcon="pencil">
                  <AuHeading @level="3" @skin="4">
                    Functionaliteit
                  </AuHeading>
                </c.header>
                <c.content>
                  <AuList @direction="vertical" @divider={{true}} as |Item|>
                    <Item>
                      FUNCTIE 1
                    </Item>
                    <Item>
                      FUNCTIE 2
                    </Item>
                    <Item>
                      FUNCTIE 3
                    </Item>
                  </AuList>
                </c.content>
                <c.footer />
              </AuCard>
            </div>
          </div>
        </div>
      </section>
    </main>

    <AuMainFooter>
      <FooterHeading />
      <AuContent @skin="small">
        <p>Uitgegeven door
          <a class="au-c-link"
            href="https://www.vlaanderen.be/organisaties/administratieve-diensten-van-de-vlaamse-overheid/beleidsdomein-kanselarij-en-bestuur/agentschap-binnenlands-bestuur">Agentschap
            Binnenlands Bestuur</a>
        </p>
        <ul class="au-c-list-horizontal">
          <li class="au-c-list-horizontal__item">
            <AuLink @route="legaal.disclaimer" @skin="secondary">Disclaimer</AuLink>
          </li>
          <li class="au-c-list-horizontal__item">
            <AuLink @route="legaal.cookieverklaring" @skin="secondary">Cookieverklaring</AuLink>
          </li>
          <li class="au-c-list-horizontal__item">
            <AuLink @route="legaal.toegankelijkheidsverklaring" @skin="secondary">Toegankelijkheid</AuLink>
          </li>
        </ul>
      </AuContent>
    </AuMainFooter>
  </div>
</div>