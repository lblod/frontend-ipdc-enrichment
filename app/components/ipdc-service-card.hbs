
<AuCard {{on "click" this.handleClick}} @size="small" class="c-overview-card c-overview-card--link" as |card|>
  <card.header>
    <div class="c-overview-card__header">
      <div class="au-u-flex au-u-flex--spaced-tiny">
        <AuBadge @skin={{this.badgeSkin}} @icon={{this.icon}} @size="small"/>
        <div
          class="au-u-h6 au-u-medium c-overview-card__link"
          title={{get @model.name "0.content"}}
        >
          {{get @model.name "0.content"}}
        </div>
      </div>
      <div class="au-u-flex au-u-flex--spaced-tiny au-u-flex--vertical-center">
        <div class="au-u-flex au-u-flex--spaced-tiny au-u-flex--wrap">
          {{#if @model.endDate}}
            <AuPill @skin="warning" @size="small">Deadline: {{@model.endDate}}</AuPill>
          {{else}}
            <AuPill @skin="default" @size="small">Deadline: onbekend</AuPill>
          {{/if}}
          {{#if @model.thematicAreas}}
            {{#each @model.thematicAreas as |theme|}}
              <BroaderConceptPills @uri={{theme.uri}} />
            {{/each}}
          {{/if}}
          {{#if @model.type}}
              <BroaderConceptPills @uri={{@model.type.uri}} />
          {{/if}}
        </div>
      </div>
    </div>
  </card.header>
</AuCard>